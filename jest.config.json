{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "bail": true,
  "testRegex": "(unit).test.(js|ts)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/index.ts",
    "!tsdown.config.ts",
    "!**/coverage/**",
    "!**/dist/**",
    "!**/output/**",
    "!**/report/**",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}