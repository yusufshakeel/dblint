{
  "name": "dblint",
  "version": "0.2.0",
  "description": "A simple database linter.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "dblint": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dblint": "ts-node src/index.ts",
    "prepare": "husky install",
    "build": "tsdown",
    "bootstrap": "mkdir -p output report",
    "all:containers": "sh ./scripts/postgres.sh",
    "all": "rm -rf dist && npm run precommit && npm run build",
    "test": "jest -c jest.config.json",
    "precommit": "npm run bootstrap && npm run lint && npm run test",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "npx eslint -c eslint.config.mjs src",
    "lint:fix:src": "npx eslint --fix -c eslint.config.mjs src",
    "lint:test": "npx eslint -c eslint.config.mjs tests",
    "lint:fix:test": "npx eslint --fix -c eslint.config.mjs tests",
    "db:postgres:migrate": "knex migrate:latest",
    "db:postgres:rollback": "knex migrate:rollback --all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusufshakeel/dblint.git"
  },
  "keywords": [
    "database",
    "linter",
    "postgresql"
  ],
  "author": "Yusuf Shakeel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yusufshakeel/dblint/issues"
  },
  "homepage": "https://github.com/yusufshakeel/dblint#readme",
  "dependencies": {
    "cli-table3": "^0.6.5",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/jest": "^30.0.0",
    "@types/pluralize": "^0.0.33",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
